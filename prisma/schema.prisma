// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Detailer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  priceRange  String
  imageUrl    String?
  latitude    Float
  longitude   Float
  businessName String
  email       String
  phone       String
  address     String
  city        String
  state       String
  zipCode     String
  images      Json[]
  services    Json[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
