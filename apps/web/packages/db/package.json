{
  "name": "@reeva/db",
  "version": "1.0.0",
  "description": "Database package for Reeva 3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "db:seed": "dotenv -e ../../.env -- tsx src/seed.ts",
    "db:check": "dotenv -e ../../.env -- tsx src/check-db.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "dotenv": "^16.4.5",
    "prisma": "^6.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "dotenv-cli": "^10.0.0"
  }
}
